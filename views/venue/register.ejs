<% layout('layouts/boilerplate') -%>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Venue Registration</h1>

    <!-- LOGIN FORM -->
    <form action="/venue" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
            <label>Hours</label>
            <input type="text" class="form-control" name="hours">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="form-group">
            <label>Specials</label>
            <input type="text" class="form-control" name="specials">
        </div>
        <div class="form-group">
            <label>Events</label>
            <input type="text" class="form-control" name="events">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Register</button>
    </form>

    <hr>

    <p><a href="/">home</a>.</p>

</div>

</div>

