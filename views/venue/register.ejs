<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Venue Registration</h1>

    <!-- LOGIN FORM -->
    <form action="/venue/register" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="venue[title]">
        </div>
        <div class="form-group">
            <label>Hours</label>
            <input type="text" class="form-control" name="venue[hours]">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="venue[description]">
        </div>
        <div class="form-group">
            <label>Specials</label>
            <input type="text" class="form-control" name="venue[specials]">
        </div>
        <div class="form-group">
            <label>Events</label>
            <input type="text" class="form-control" name="venue[events]">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Register</button>
    </form>

    <hr>

    <p><a href="/">home</a>.</p>

</div>

</div>
</body>
</html>
