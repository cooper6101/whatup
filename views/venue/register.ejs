<% layout('layouts/boilerplate') -%>

<div class="container d-flex justify-content-center">

<div class="jumbotron signupForm">

    <h1><span class="fa fa-sign-in"></span> Venue Registration</h1>

    <!-- LOGIN FORM -->
    <form action="/venue" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="venue[title]">
        </div>
        <div class="form-group">
            <label>Hours</label>
            <input type="text" class="form-control" name="venue[hours]">
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="venue[location]">
        </div>
        <div>
            <label>Images</label>
            <input type="file" accept="images/*" name="images" multiple>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" name="venue[description]"></textarea>
        </div>
        <div class="form-group">
            <label>Specials</label>
            <input type="text" class="form-control" name="venue[specials]">
        </div>
        <div class="form-group">
            <label>Events</label>
            <input type="text" class="form-control" name="venue[events]">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Register</button>
    </form>

    <hr>

    <p><a href="/">home</a>.</p>

</div>

</div>

