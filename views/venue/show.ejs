<% layout('layouts/boilerplate') -%>

<h1>Title: <%= venue.title %></h1>

<div>
    <% venue.images.forEach(function(image) { %>
        <img src="<%= image.url %>" alt="venue image">
    <% }); %>
</div>
<p>Hours: <%= venue.hours %></p>
<p>Description: <%= venue.description %></p>
<p>Specials: <%= venue.specials %></p>
<p>Events: <%= venue.events %></p>

<a href="/venue/<%= venue.id %>/edit">Edit Venue</a>
<div>
    <form action="/venue/<%= venue.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
</div>